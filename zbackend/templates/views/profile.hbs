<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mafia | User Profile</title>
    <style>
        /* Add your styles here */
        @keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @keyframes slideOut {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(100%);
                opacity: 0;
            }
        }

        .alert {
            top: 122px;
            right: 30px;
            text-align: center;
            padding: 15px;
            width: fit-content;
            background-color: #6375ffb5;
            color: white;
            border-radius: 5px;
            z-index: 2;
            padding: 20px;
            position: fixed;
            right: 20px;
            animation: slideIn 0.5s forwards, slideOut 0.5s 4.5s forwards; /* Slide in and out */
        }

        .alert.success {
            background-color: #4CAF50;
        }
    </style>
</head>
<body>
    <header>
        <nav class="nav">
            <h2 class="logo">Mafia - User Profile</h2>
        </nav>
    </header>
    <main>
        {{#if successMessage}}
            <div class="alert success">{{successMessage}}</div>
        {{/if}}

        {{#if errorMessage}}
            <div class="alert">{{errorMessage}}</div>
        {{/if}}
        <section class="container">
            <h2 class="section-title">Profile</h2>
            <form action="/profile/update" method="POST">
                <div class="form-group">
                    <label for="firstname">First Name:</label>
                    <input type="text" id="firstname" name="firstname" value="{{user.firstname}}" required>
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name:</label>
                    <input type="text" id="lastname" name="lastname" value="{{user.lastname}}" required>
                </div>
                <div class="form-group">
                    <label for="emailid">Email:</label>
                    <input type="email" id="emailid" name="emailid" value="{{user.emailid}}" required>
                </div>
                <div class="form-group">
                    <label for="password">Password (leave blank to keep current):</label>
                    <input type="password" id="password" name="password">
                </div>
                <button type="submit" class="btn-update">Update Profile</button>
            </form>
        </section>

        <!-- Cart Section -->
        <section class="container">
            <h2 class="section-title">Current Cart</h2>
            {{#if cart}}
                {{#if cart.items.length}}
                    <ul>
                        {{#each cart.items}}
                            <li>
                                <img src="/uploads/{{this.productId.imageurl}}" alt="{{this.productId.title}}" class="cart-img">
                                <h3>{{this.productId.title}}</h3>
                                <p>{{this.productId.description}}</p>
                                <p>Price: ${{this.productId.price}}</p>
                                <p>Quantity: {{this.quantity}}</p>
                                <form action="/cart/update" method="POST">
                                    <input type="hidden" name="productId" value="{{this.productId._id}}">
                                    <label for="quantity">Quantity:</label>
                                    <input type="number" id="quantity" name="quantity" value="{{this.quantity}}" min="1">
                                    <button type="submit">Update Quantity</button>
                                </form>
                                <form action="/cart/delete" method="POST">
                                    <input type="hidden" name="productId" value="{{this.productId._id}}">
                                    <button type="submit">Remove</button>
                                </form>
                            </li>
                        {{/each}}
                    </ul>
                {{else}}
                    <p>Your cart is empty.</p>
                {{/if}}
            {{else}}
                <p>Your cart is empty.</p>
            {{/if}}
        </section>
        <!-- Orders Section -->
        <section class="container">
            <h2 class="section-title">Order History</h2>
            {{#if orders.length}}
                <ul>
                    {{#each orders}}
                        <li>
                            <h3>Order ID: {{this._id}}</h3>
                            <p>Status: {{this.status}}</p>
                            <p>Total: ${{this.total}}</p>
                            <ul>
                                {{#each this.items}}
                                    <li>
                                        <h4>{{this.title}}</h4>
                                        <p>Price: ${{this.price}}</p>
                                        <p>Quantity: {{this.quantity}}</p>
                                    </li>
                                {{/each}}
                            </ul>
                            <p>Ordered on: {{this.createdAt}}</p>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p>No orders found.</p>
            {{/if}}
        </section>

    </main>
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const successMessage = "{{successMessage}}";
            const errorMessage = "{{errorMessage}}";
        });
    </script>
</body>
</html>
